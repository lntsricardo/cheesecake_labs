<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cheesecake.com.teste.ArticleInfoActivity"
    android:background="#ffebebeb">

    <!-- Image -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:id="@+id/linearLayoutInfo">

        <ImageView
            android:id="@+id/image_website_info"
            android:layout_width="50dip"
            android:layout_height="50dip" />

        </LinearLayout>

    <!-- Author -->
    <TextView
        android:id="@+id/authors_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayoutInfo"
        android:layout_toRightOf="@+id/linearLayoutInfo"
        android:textColor="#ff040404"
        android:typeface="sans"
        android:textSize="14dip"
        android:textAlignment="center"
        android:layout_alignParentStart="false" />

    <!-- Date -->
    <TextView
        android:id="@+id/date_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/authors_info"
        android:gravity="right"
        android:layout_toRightOf="@id/authors_info"
        android:layout_marginRight="5dip"
        android:textSize="14dip"
        android:textColor="#ff040404" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutInfo"
        android:textSize="18dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/linearLayoutInfo"
        android:textColor="#ff040404"
        android:textStyle="bold"/>

    <!-- Text/Content -->
    <TextView
        android:id="@+id/text_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_info"
        android:textSize="18dip"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true"
        android:textColor="#ff040404"/>
</RelativeLayout>
